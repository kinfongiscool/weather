<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.kinfong.weather">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/partly_cloudy_day" android:label="@string/app_name" android:name="com.kinfong.weather.MyApplication" android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <activity android:label="@string/app_name" android:name="com.kinfong.weather.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--<service android:name=".LocationService" android:process=":my_service" />-->
        <service android:icon="@drawable/logo" android:label="@string/service_name" android:name="com.kinfong.weather.LocationService">
        </service>

        <receiver android:name="com.kinfong.weather.MyScheduleReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.kinfong.weather.MyStartServiceReceiver">
        </receiver>
    </application>

</manifest>
